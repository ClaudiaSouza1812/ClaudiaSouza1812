name: Profile Stats Update
on:
  schedule:
    - cron: "0 0 * * *"  # Fixed the cron syntax
  workflow_dispatch:      

jobs:
  update-stats:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      
      - name: GitHub Stats
        uses: anmol098/github-profile-readme-generator@master
        with:
          GH_TOKEN: ${{ secrets.GH_TOKEN }}
          SHOW_LANGUAGE: "True"
          SHOW_LANGUAGE_PER_REPO: "True"
          INCLUDE_ALL_COMMITS: "true"     # Changed to lowercase
          COUNT_PRIVATE: "true"           # Added this
          INCLUDE_PRIVATE: "true"         # Changed to lowercase
          SHOW_TOTAL_CONTRIBUTIONS: "true"
          SHOW_YEARLY_CONTRIBUTIONS: "true"
          COMMITS_PER_YEAR: "true"        # Added this
          CALCULATE_TOTAL_COMMITS: "true"  # Added this
          INCLUDE_ALL_YEARS: "true"       # Added this
